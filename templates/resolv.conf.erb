# The default domain name if none is supplied
domain <%= @domain %>

# The list of name servers
<% count = 1 
[@nameservers].flatten.each do |server| -%>
nameserver <%= server %>
<% count += 1
end -%>

# The list of options
<% if @timeout %>options timeout:<%= @timeout %><% end %>
options attempts:<% if @attempts %><%= @attempts %><% else %><%= count %><% end %>
<% if @rotate %>options rotate<% end %>
<% if @options; [@options].flatten.each do |option| -%>
options <%= option %>
<% end; end -%>
